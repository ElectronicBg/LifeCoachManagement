@model IEnumerable<LifeCoachManagement.ViewModels.CategoryViewModel>
@{
    ViewData["Title"] = "Categories List";
}

<h2>Categories List</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>                   
                    @if (!category.HasAssignments)
                    {
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                    }
                    else
                    {
                        <p>No Actions Allowed!</p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Category</a>

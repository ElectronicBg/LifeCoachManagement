@model List<Photo>

<div style="background-image:url('/Images/LifeCoachManagementBackground2.jpg'); background-size: cover; background-position:center;min-height:90vh;">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-12">
                <div class="d-flex flex-column justify-content-between align-items-center ">
                    <h1 style="color:rgb(160, 208, 204);">Снимки към Задачата</h1>
                    @if (Model.Count > 0)
                    {
                        <div class="row gap-2">
                            @foreach (var photo in Model)
                            {
                                <div class="col-md-4 p-3 rounded-2" style="background-color: rgba(0, 0, 0, 0.5);">
                                    <img src="@Url.Content("~/Uploads/" + photo.FileName)" alt="Photo" class="img-thumbnail border-0 p-2" />

                                    <p class="text-white">Дата на Предаване: @photo.CreationDate.ToShortDateString()</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <h1 class="text-danger">Няма налични снимки за тази задача!</h1>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

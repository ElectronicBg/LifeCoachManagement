@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="text-center" style="height:90vh;background-image:url('/Images/LifeCoachManagementBanner.jpg'); background-size: cover; background-position:center;">
    <div class="col-6 d-flex flex-column h-100 justify-content-center  align-items-center">
        <div class="col-md-5 p-4 rounded" style="background-color: rgba(0, 0, 0, 0.5);">
            <h1 style="color:rgb(160, 208, 204);">Добре дошли!</h1>
            <section>
                <form id="account" method="post">
                    <hr style="color:rgb(160, 208, 204); height:2px;" />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Имейл</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Парола</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3" style="color:rgb(160, 208, 204);">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary border-0" style="background-color:rgb(160, 208, 204);">Влез</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
